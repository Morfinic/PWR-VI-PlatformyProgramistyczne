<UserControl x:Class="PWR_VI_PodPro.View.ViewComponents.InfoBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PWR_VI_PodPro.View.ViewComponents"
             mc:Ignorable="d" 
             Loaded="UserControl_Loaded"
             d:DesignHeight="33" d:DesignWidth="1100"
             Background="Black">
    <Grid>
        <Rectangle
            Fill="LightGray" />

        <StackPanel
            Orientation="Horizontal">
            <TextBlock 
                Text="API"
                VerticalAlignment="Center"
                Margin="0,0,5,0"
                FontSize="20"
                FontWeight="Bold" />
            <Ellipse
                Fill="Red"
                Width="10"
                Height="10"
                Name="ApiClientStatusDot"/>

            <Image
                Source="https://www.cheapshark.com/img/stores/icons/0.png"
                Width="15"
                Height="15"
                Margin="10,0,5,0" 
                Name="SteamImage"/>
            <Ellipse
                Fill="Red"
                Width="10"
                Height="10"
                Name="SteamStatusDot"/>
        </StackPanel>
    </Grid>
</UserControl>
